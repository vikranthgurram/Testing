pipeline{
    agent any
    tools{
        maven 'mymaven'
    }
    stages{
        stage("compile"){
            steps{
                script{
                    echo "Compiling the code"
                    sh 'mvn compile'
                }
            }
        }
        stage("test"){
            agent any
            steps{
                script{
                    echo "Testing the code"
                    sh 'mvn test'
                }
            }
            post{
                always{
                    junit 'target/surefire-reports/*.xml'
                }
            }
        }
        stage("package1"){
            steps{
                script{
                    echo "Packaging the code"
               sshagent(credentials : ['Buildsshplugin_key']) {  
                 sh 'ssh -o StrictHostKeyChecking=no  ec2-user@172.31.35.238 uptime'
                   sh 'ssh -v ec2-user@172.31.35.238 '
                  sh "ssh -o StrictHostKeyChecking=no server-script.sh ec2-user@172.31.35.238 'bash ~/server-script.sh'" 
                 }
                }
            }
        }
    }
}


   
